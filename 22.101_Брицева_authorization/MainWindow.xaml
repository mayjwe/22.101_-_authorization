<Page x:Class="_22._101_Брицева_authorization.Page.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_22._101_Брицева_authorization.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Autho" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="логин:" Width="213"/>
            <TextBox x:Name="loginTextBox" Width="200" />

            <Label Content="пароль:" Width="219"/>
            <PasswordBox x:Name="passwordBox" Width="200"/>

            <Button Content="Войти" Margin="0,10,0,0" Click="LoginButton_Click" Background="Green" Width="140" Height="41"/>

            <TextBlock x:Name="resultTextBlock"  HorizontalAlignment="Center"  Margin="0,10,0,0" TextWrapping="Wrap" Width="300"/>

        </StackPanel>
    </Grid>
</Page>

